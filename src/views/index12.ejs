<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Listado Vehículos 12</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <h1>Venta de Vehículos - Examen Final (12)</h1>

  <a href="/vehiculo12/nuevo">Nuevo Vehículo</a>

  <table border="1">
    <thead>
      <tr>
        <th>ID</th>
        <th>Marca</th>
        <th>Modelo</th>
        <th>Precio</th>
        <th>Cantidad</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% if (vehiculos.length === 0) { %>
        <tr>
          <td colspan="6">No hay vehículos registrados</td>
        </tr>
      <% } else { %>
        <% vehiculos.forEach(v => { %>
          <tr>
            <td><%= v.ID_VEHICULO_12 %></td>
            <td><%= v.MARCA_12 %></td>
            <td><%= v.MODELO_12 %></td>
            <td>Q<%= v.PRECIO_12 %></td>
            <td><%= v.CANTIDAD_12 %></td>
            <td>
              <a href="/vehiculo12/<%= v.ID_VEHICULO_12 %>">Ver</a>
              <a href="/vehiculo12/<%= v.ID_VEHICULO_12 %>/editar">Editar</a>
              <form action="/vehiculo12/<%= v.ID_VEHICULO_12 %>?_method=DELETE" method="POST" style="display:inline;">
                <button type="submit">Eliminar</button>
              </form>
            </td>
          </tr>
        <% }) %>
      <% } %>
    </tbody>
  </table>
</body>
</html>
